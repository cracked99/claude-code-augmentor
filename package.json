{
  "name": "@ai-sensei/claude-code-augmentor",
  "version": "1.0.0",
  "description": "Claude Code Router with request augmentation - intercept, augment, and forward Claude Code requests",
  "bin": {
    "ccr": "dist/cli.js",
    "claude-code-augmentor": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cracked99/claude-code-augmentor.git"
  },
  "bugs": {
    "url": "https://github.com/cracked99/claude-code-augmentor/issues"
  },
  "homepage": "https://github.com/cracked99/claude-code-augmentor#readme",
  "scripts": {
    "build": "node scripts/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "npm run build && npm publish"
  },
  "keywords": [
    "claude",
    "code",
    "router",
    "llm",
    "anthropic"
  ],
  "author": "ai-sensei",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@inquirer/prompts": "^5.0.0",
    "@musistudio/llms": "^1.0.51",
    "dotenv": "^16.4.7",
    "find-process": "^2.0.0",
    "json5": "^2.2.3",
    "lru-cache": "^11.2.2",
    "minimist": "^1.2.8",
    "openurl": "^1.1.1",
    "rotating-file-stream": "^3.2.7",
    "shell-quote": "^1.8.3",
    "tiktoken": "^1.0.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.15",
    "esbuild": "^0.25.1",
    "fastify": "^5.4.0",
    "jest": "^29.7.0",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverageFrom": [
      "src/augment/**/*.ts",
      "!src/augment/**/__tests__/**"
    ]
  },
  "publishConfig": {
    "access": "public",
    "ignore": [
      "!build/",
      "src/",
      "screenshots/"
    ]
  }
}
